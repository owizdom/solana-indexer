.PHONY: build clean test fmt lint clippy

# -----------------------------------------------------------------------------
# Dependencies
# -----------------------------------------------------------------------------
deps:
	cargo fetch

# -----------------------------------------------------------------------------
# Build
# -----------------------------------------------------------------------------
build:
	cargo build

build-release:
	cargo build --release

# -----------------------------------------------------------------------------
# Tests and linting
# -----------------------------------------------------------------------------
test:
	cargo test --verbose

fmt:
	cargo fmt

fmtcheck:
	cargo fmt -- --check

lint: clippy

clippy:
	cargo clippy -- -D warnings

# -----------------------------------------------------------------------------
# Clean
# -----------------------------------------------------------------------------
clean:
	cargo clean

